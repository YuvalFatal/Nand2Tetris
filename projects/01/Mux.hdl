/** 
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    Not(in=sel, out=nsel);
    And(a=a, b=nsel, out=answer1);
    And(a=b, b=sel, out=answer2);
    Or(a=answer1, b=answer2, out=out);
}